<valuePolicy
        xmlns="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:c="http://midpoint.evolveum.com/xml/ns/public/common/common-3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:type="c:ValuePolicyType"
        oid="82eda6e8-c8aa-4d44-9c2c-5f1835f81be6">

    <name>Initial Partners Password Policy</name>

    <description>Initial Password Policy for user passwords.</description>

    <stringPolicy>
        <description>String validation policy</description>
        <limitations>
            <minLength>12</minLength>
            <maxLength>40</maxLength>
            <minUniqueChars>3</minUniqueChars>
            <checkAgainstDictionary>false</checkAgainstDictionary>

            <limit>
                <description>At least 1 lower case (without i,l,y,z,o)</description>
                <minOccurs>1</minOccurs>
                <mustBeFirst>false</mustBeFirst>
                <characterClass>
                    <value>abcdefghjkmnpqrstuvwx</value>
                </characterClass>
            </limit>
            <limit>
                <description>At least 1 upper case (without I,L,Y,Z,O)</description>
                <minOccurs>1</minOccurs>
                <mustBeFirst>false</mustBeFirst>
                <characterClass>
                    <value>ABCDEFGHJKMNPQRSTUVWX</value>
                </characterClass>
            </limit>
            <limit>
                <description>At least 1 number (without 0,1)</description>
                <minOccurs>1</minOccurs>
                <mustBeFirst>false</mustBeFirst>
                <characterClass>
                    <value>23456789</value>
                </characterClass>
            </limit>
        </limitations>
    </stringPolicy>

</valuePolicy>